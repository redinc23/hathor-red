# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Use DATABASE_URL for Railway/Render/Fly (they provide it)
# Or use individual vars for local:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hathor_music
DB_USER=postgres
DB_PASSWORD=your_password_here
# DATABASE_URL=postgresql://user:pass@host:5432/dbname
# DATABASE_SSL=false  # Set for local Postgres

# Redis Configuration
# Use REDIS_URL for Railway/Render (they provide it)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_URL=redis://default:pass@host:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# CORS
CLIENT_URL=http://localhost:3000

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# ===========================================
# Colab Enterprise AI Configuration
# ===========================================

# API Configuration
COLAB_API_ENDPOINT=https://colab.research.google.com/api/v1
COLAB_PROJECT_ID=your_google_cloud_project_id
COLAB_REGION=us-central1

# Authentication (use either API key or service account)
COLAB_API_KEY=your_colab_api_key
COLAB_SERVICE_ACCOUNT_PATH=./service-account.json

# Model Configuration
COLAB_TEXT_MODEL=gemini-pro
COLAB_EMBEDDING_MODEL=text-embedding-004
COLAB_VISION_MODEL=gemini-pro-vision

# Request Configuration
COLAB_TIMEOUT=30000
COLAB_MAX_RETRIES=3

# Rate Limiting
COLAB_RATE_LIMIT=60
COLAB_TOKEN_LIMIT=100000

# Feature Flags (set to 'false' to disable)
COLAB_FEATURE_PLAYLIST=true
COLAB_FEATURE_RECOMMENDATIONS=true
COLAB_FEATURE_MOOD=true
COLAB_FEATURE_SEARCH=true
COLAB_FEATURE_CHAT=true
