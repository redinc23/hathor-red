# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hathor_music
DB_USER=postgres
DB_PASSWORD=your_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# CORS
CLIENT_URL=http://localhost:3000

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# ===========================================
# Colab Enterprise AI Configuration
# ===========================================

# API Configuration
COLAB_API_ENDPOINT=https://colab.research.google.com/api/v1
COLAB_PROJECT_ID=your_google_cloud_project_id
COLAB_REGION=us-central1

# Authentication (use either API key or service account)
COLAB_API_KEY=your_colab_api_key
COLAB_SERVICE_ACCOUNT_PATH=./service-account.json

# Model Configuration
COLAB_TEXT_MODEL=gemini-pro
COLAB_EMBEDDING_MODEL=text-embedding-004
COLAB_VISION_MODEL=gemini-pro-vision

# Request Configuration
COLAB_TIMEOUT=30000
COLAB_MAX_RETRIES=3

# Rate Limiting
COLAB_RATE_LIMIT=60
COLAB_TOKEN_LIMIT=100000

# Feature Flags (set to 'false' to disable)
COLAB_FEATURE_PLAYLIST=true
COLAB_FEATURE_RECOMMENDATIONS=true
COLAB_FEATURE_MOOD=true
COLAB_FEATURE_SEARCH=true
COLAB_FEATURE_CHAT=true

# ===========================================
# Google Cloud Configuration
# ===========================================

# Google Cloud Project
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_CLOUD_REGION=us-central1

# Google Cloud Credentials (Service Account)
GOOGLE_CLOUD_CRED_TYPE=service_account
GOOGLE_CLOUD_PRIVATE_KEY_ID=your_private_key_id
GOOGLE_CLOUD_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
GOOGLE_CLOUD_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_CLOUD_CLIENT_ID=your_client_id

# Google Cloud Storage
GOOGLE_CLOUD_STORAGE_BUCKET=hathor-music-storage
GOOGLE_CLOUD_STORAGE_ENABLED=false

# Google AI Platform
GOOGLE_AI_MODEL_ENDPOINT=https://us-central1-aiplatform.googleapis.com
GOOGLE_AI_MODEL_VERSION=v1
GOOGLE_AI_PLATFORM_ENABLED=false

# Google Cloud Features
GOOGLE_CLOUD_LOGGING_ENABLED=false
GOOGLE_CLOUD_MONITORING_ENABLED=false

# ===========================================
# Data Collection & Analytics
# ===========================================

# Data Collection Settings
DATA_COLLECTION_ENABLED=true
DATA_COLLECTION_BATCH_SIZE=100
DATA_COLLECTION_FLUSH_INTERVAL=60000

# Real-Time Analytics
ANALYTICS_ENABLED=true
ANALYTICS_UPDATE_INTERVAL=30000

# Holy Shit Features (Advanced)
HOLY_SHIT_FEATURES_ENABLED=true
FEATURE_PREDICTIVE_PLAYLISTS=true
FEATURE_EMOTIONAL_SYNC=true
FEATURE_SOCIAL_LISTENING=true
FEATURE_AI_DJ=false
FEATURE_LIVE_REMIX=false
