# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hathor_music
DB_USER=postgres
DB_PASSWORD=your_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# CORS
CLIENT_URL=http://localhost:3000

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# ===========================================
# Colab Enterprise AI Configuration
# ===========================================

# API Configuration
COLAB_API_ENDPOINT=https://colab.research.google.com/api/v1
COLAB_PROJECT_ID=your_google_cloud_project_id
COLAB_REGION=us-central1

# Authentication (use either API key or service account)
COLAB_API_KEY=your_colab_api_key
COLAB_SERVICE_ACCOUNT_PATH=./service-account.json

# Model Configuration
COLAB_TEXT_MODEL=gemini-pro
COLAB_EMBEDDING_MODEL=text-embedding-004
COLAB_VISION_MODEL=gemini-pro-vision

# Request Configuration
COLAB_TIMEOUT=30000
COLAB_MAX_RETRIES=3

# Rate Limiting
COLAB_RATE_LIMIT=60
COLAB_TOKEN_LIMIT=100000

# Feature Flags (set to 'false' to disable)
COLAB_FEATURE_PLAYLIST=true
COLAB_FEATURE_RECOMMENDATIONS=true
COLAB_FEATURE_MOOD=true
COLAB_FEATURE_SEARCH=true
COLAB_FEATURE_CHAT=true

# ===========================================
# Bidirectional Sync Engine (Notion + Linear)
# ===========================================
NOTION_API_KEY=your_notion_api_key
NOTION_WEBHOOK_SECRET=notion_webhook_secret
NOTION_DATABASE_ID=notion_database_id

LINEAR_API_KEY=your_linear_api_key
LINEAR_WEBHOOK_SECRET=linear_webhook_secret
LINEAR_TEAM_ID=your_linear_team_id
LINEAR_RATE_LIMIT=10
