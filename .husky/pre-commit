#!/usr/bin/env sh
# Husky pre-commit hook â€” same checks as CI.
# Keeps the lint + test gate local so broken code never reaches the remote.

set -e

ROOT="$(git rev-parse --show-toplevel)"

echo "pre-commit: lint"
"$ROOT/node_modules/.bin/eslint" . --max-warnings=0

echo "pre-commit: tests"
"$ROOT/node_modules/.bin/jest" --passWithNoTests
