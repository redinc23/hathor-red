{
  "name": "hathor-red-music-platform",
  "version": "1.0.0",
  "description": "MVP music streaming platform with AI features",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev:legacy": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "dev": "concurrently \"pnpm run server\" \"turbo run dev\"",
    "server": "nodemon server/index.js",
    "client": "pnpm --filter hathor-music-client start",
    "build": "turbo run build",
    "deploy": "docker build -t hathor-music:latest .",
    "build:ci": "turbo run build",
    "install-all": "pnpm install",
    "db:seed": "node database/seed.js",
    "db:generate-audio": "node database/generate-sample-audio.js",
    "db:setup": "pnpm run db:generate-audio && pnpm run db:seed",
    "db:reset": "turbo run db:reset",
    "test": "jest",
    "test:all": "concurrently \"pnpm run test\" \"turbo run test\"",
    "lint": "eslint . --max-warnings=0",
    "lint:ci": "turbo run lint",
    "type-check": "tsc --noEmit",
    "type-check:ci": "turbo run type-check",
    "validate": "turbo run type-check lint test",
    "prepare": "husky install",
    "preflight": "tsc --noEmit && eslint . && audit-ci --critical"
  },
  "keywords": [
    "music",
    "streaming",
    "AI",
    "playlist"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "volta": {
    "node": "18.17.0"
  },
  "packageManager": "pnpm@8.9.0",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "2.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "socket.io": "^4.6.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "audit-ci": "^7.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.2.2",
    "turbo": "^2.7.6",
    "typescript": "^5.9.3"
  }
}
