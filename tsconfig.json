{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": ["server/**/*.js", "client/src/**/*.js", "database/**/*.js"],
  "exclude": ["node_modules", "client/build", "packages"]
}
